<div class="my-homes">
	<div class="container">
		<div class="row">
			<div class="jumbo-wrapper col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12">
				<h1>My Homes</h1>
				<h2>All the homes (and neighborhoods) you've checked out so far.</h2>
				<ul class="list-group">
				{{#each}}
				  {{#link-to 'property' this}}
				    <li class="property list-group-item row">
						  		<p>{{address}}</p>
						  		<div class="col-md-5 col-sm-8 col-xs-12 home-info">
						  			<img class="col-xs-12" {{bind-attr src=picture}}>
						  		</div>
						  		<div class="col-md-7 col-sm-4 col-xs-12 home-info">
							  		<h3 class="col-xs-12 home-info">${{price}}</h3>
						  			<div class="col-xs-6 col-sm-12 col-md-6 home-info">
							  			<h4>Beds: {{bedrooms}}</h4>
						  			</div>
						  			<div class="col-xs-6 col-sm-12 col-md-6 home-info">
							  			<h4>Baths: {{bathrooms}}</h4>
						  			</div>
						  		</div>
						  	</li>
				  {{/link-to}}
				{{/each}}
				</ul>
			</div>
		</div>
	</div>
</div>

